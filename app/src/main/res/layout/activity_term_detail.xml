    <TextView
        android:id="@+id/text_term_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/recyclerViewCardMargins"
        android:layout_marginStart="4dp"

        android:text="@string/termtitle2"
        android:textSize="@dimen/detailsViewTextSize"
        app:layout_constraintBottom_toBottomOf="@+id/text_term_detail_title_field"

        app:layout_constraintStart_toStartOf="parent" />

