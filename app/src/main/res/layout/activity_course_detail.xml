    <TextView
        android:id="@+id/text_course_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/recyclerViewCardMargins"
        android:layout_marginStart="4dp"
        android:text="@string/coursetitle2"
        android:textSize="@dimen/detailsViewTextSize"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_course_detail_title_field" />

    <!--
    <TextView
        android:id="@+id/text_view_detail_separator"
        android:layout_width="wrap_content"
